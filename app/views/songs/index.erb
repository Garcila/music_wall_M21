<div class="page-header">
  <h1>All The Songs <small>Music Wall... where tunes come to rest *.0</small></h1>
  <p><a class="btn btn-primary btn-lg" href="/" role="button">Home Grave</a>
  <a class="btn btn-primary btn-lg" href="/songs/new" role="button">Take a song to its grave</a></p>
</div>

<% @songs.each do |song| %>
  <div class="song">
    <h3><a href="/songs/<%= song.id %>"><%= song.title %></a> <small>(by: <%= song.author %>)</small></h3>
    <p>
      <h5><small>URL: <a href=<%= song.url %>>view their site</a></small></h5>
    </p>
  </div>
<% end %>

<hr/>
<a href="/songs/new">Post a song!</a>