<div class="page-header">
  <h1>Take a Tune to its Grave<small>Music Wall... where tunes come to rest *.0</small></h1>
  <p><a class="btn btn-primary btn-lg" href="/" role="button">Home Grave</a>
  <a class="btn btn-primary btn-lg" href="/songs" role="button">View all the songs</a></p>
</div>

<% if @song.errors.any? %>
  <div>
    <strong>There are some issues with your input, please check:</strong>
    <ul>
      <% @song.errors.full_messages.each do |song| %>
        <li><%= song %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<form method="post" action="/songs">
  <div>
    <label>Author:</label>
    <input type="text" name="author" value="<%= @song.author %>">
  </div>
  <div>
    <label>Title:</label>
    <input type="text" name="title" value="<%= @song.title %>">
  </div>
  <div>
    <label>URL:</label>
    <input type="text" name="url" value="<%= @song.url %>">
  </div>
  <div>
    <input type="submit" value="Submit" >
  </div>
</form>